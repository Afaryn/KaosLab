<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_min="500dp">

            <!-- Konten di dalam Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bg_gradient_top"
                    android:contentDescription="Product image" />

                <!-- Product Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Short sleeve t-shirt"
                        android:textColor="#1E1E24"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pjs_bold"/>

                    <!-- Product Price -->
                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Rp 55.000 - 65.000"
                        android:textColor="#D79F7D"
                        android:textSize="14sp"
                        android:fontFamily="@font/pjs_medium"/>

                    <!-- Size Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Size available in:"
                        android:textColor="#444140"
                        android:textSize="14sp"
                        android:fontFamily="@font/pjs_medium"/>

                    <!-- Flexbox for Sizes -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/sizeOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start"
                        app:alignItems="center" />

                    <!-- Note Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="*you can choose more than one size"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:fontFamily="@font/pjs_medium"/>

                    <!-- Color Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Select color:"
                        android:textColor="#444140"
                        android:textSize="14sp"
                        android:fontFamily="@font/pjs_medium"/>


                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/colorOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:columnCount="6" />
                </LinearLayout>



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Next"
            android:enabled="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#888888"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
