<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_verification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_dialog"
    android:padding="24dp">

    <!-- Text -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're successfully registered"
        android:fontFamily="@font/pjs_bold"
        android:textSize="18sp"
        android:textColor="#0C2A5C"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Circular loading with checkmark -->
    <FrameLayout
        android:id="@+id/loading_success_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular arc (animated) -->
        <ImageView
            android:id="@+id/iv_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_spinner_arc"
            android:layout_gravity="center" />

        <!-- Checkmark icon -->
        <ImageView
            android:id="@+id/iv_checkmark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_checkmark"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Button -->
    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Sign In"
        android:textColor="#0C2A5C"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/pjs_bold"
        android:background="@drawable/bg_outline_button"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loading_success_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
